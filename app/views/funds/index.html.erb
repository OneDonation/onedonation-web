<div class="table-responsive">
  <%= form_tag "/donations", method: :get, remote: true do |f| %>
    <%= hidden_field_tag :filter, true %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <%= sortable_header("Name", fundraisers_path(name: params[:name], sort: "Name", direction: params[:direction].present? && params[:direction] == "asc" ? "desc" : "asc")) %>
          <th>Progress</th>
          <th>Close date</th>
        </tr>
      </thead>

      <tbody>
        <% @funds.each do |fund| %>
          <tr>
            <td><%= fund.name %></td>
            <td>
              <div class="progress">
                <div class="progress-bar" style="width: <%= number_to_percentage(fund.pecent_raised, precision:0) %>"></div>
              </div>
            </td>
            <td><%= fund.close_date.strftime("%b %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>


