<!DOCTYPE html>
<html>
  <head>
    <title>One Donation Admin</title>
    <%= stylesheet_link_tag    'admin', media: 'all', data: { turbolink_track: true }  %>
    <%= javascript_include_tag 'admin', data: { turbolink_track: true }  %>
    <%= javascript_include_tag 'https://js.stripe.com/v2/', 'data-turbolinks-track' => true  %>

    <%= csrf_meta_tags %>
    <%= tag :meta, name: "stripe-public-key", content: Rails.application.secrets.stripe_public_key %>

  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">One Donation</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= nav_active_classes(admin_dashboard_page?) %>">
              <%= link_to "Dashboard", admin_admin_dashboard_path %>
            </li>
            <li class="<%= nav_active_classes(user_page?) %>">
              <%= link_to "Users", admin_users_path %>
            </li>
            <li class="<%= nav_active_classes(donation_page?) %>">
              <%= link_to "Donations", admin_donations_path %>
              </li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div id="content" class="container">
      <%= yield %>
    </div>
    <div class="modals"></div>
  </body>
</html>
