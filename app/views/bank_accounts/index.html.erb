<p id="notice"><%= notice %></p>

<h1>Listing Bank Accounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Nickname</th>
      <th>Stripe bank account</th>
      <th>Stripe bank account last4</th>
      <th>Stripe</th>
      <th>Country</th>
      <th>Currency</th>
      <th>Default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.user_id %></td>
        <td><%= bank_account.nickname %></td>
        <td><%= bank_account.stripe_bank_account_id %></td>
        <td><%= bank_account.stripe_bank_account_last4 %></td>
        <td><%= bank_account.stripe %></td>
        <td><%= bank_account.country %></td>
        <td><%= bank_account.currency %></td>
        <td><%= bank_account.default %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

