<h1 class="page-header">New Bank Account</h1>

<%= form_for([:admin, :user, @bank_account], html: { id: "new_bank_account" }) do |f| %>

  <div class="form-group">
    <%= f.label :nickname, "Name" %>
    <%= f.text_field :nickname, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :routing_number %>
    <%= text_field_tag :routing_number, "110000000", name: nil, id: "routing_number", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :account_number %>
    <%= text_field_tag :account_number, "000123456789", name: nil, id: "account_number", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.country_select :country, stripe_country_options(request), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :currency %>
    <%= f.select :currency, [], {}, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :default_stripe_bank_account, "Default Bank Account" %>
    <div class="checkbox">
      <%= f.label :default_stripe_bank_account do %>
        <%= f.check_box :default_stripe_bank_account %> Make this Bank Account the default for this user.
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>



