<h1 class="page-header">Editing Bank Account</h1>

<%= form_for([:admin, @user, @bank_account], html: { id: "edit_bank_account" }) do |f| %>
  <% if @bank_account.errors.any? %>
    <div class="alert alert-danger">
      <p>Please address the following errors:</p>
      <ul>
        <% @bank_account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group <%= "has-error" if @bank_account.errors.include?(:nickname) %>">
    <%= f.label :nickname, "Name" %>
    <%= f.text_field :nickname, class: "form-control" %>
  </div>

  <div class="form-group <%= "has-error" if @bank_account.errors.include?(:stripe) %>">
    <%= f.label :default_stripe_bank_account, "Default Bank Account" %>
    <div class="checkbox">
      <%= f.label :default_stripe_bank_account do %>
        <%= f.check_box :default_stripe_bank_account %> Make this Bank Account the default for this user.
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>


